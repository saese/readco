<div class="form-box">
  <%= form_for(@subtopic, remote: true) do |f| %>
    <% if @subtopic.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@subtopic.errors.count, "error") %> prohibited this subtopic from being saved:</h2>

        <ul>
        <% @subtopic.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field form-group">
    
      <%= f.label :title %><br/>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="field form-group">

      <%= f.label :description %><br/>
      <%= f.text_area :description, class: "form-control" %>
    </div>
     <%= f.hidden_field :topic_id, :value => @topic.id %>
    <div class="actions">
      <%= f.submit "Submit", class: "actions btn btn-default btn-sm" %>
    </div>
  <% end %>
</div>